{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": ".",
    "baseUrl": "./",
    "paths": {
      "*": [
        "packages/*/src"
      ]
    },
    "importHelpers": true
  },
  "exclude": [
    "./ormconfig.ts"
  ]
}